# Site Configuration
NEXT_PUBLIC_SITE_URL=https://skills.pawgrammer.com

# Upstash Redis (REQUIRED for Featured, Newest, Trending sections)
# Get these from https://console.upstash.com/
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-rest-token

# Discord Feedback Webhook (for Trust & Actions voting feature)
DISCORD_FEEDBACK_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Cron Secret (for scheduled trending computation)
CRON_SECRET=your-random-secret-key

# Trending Algorithm Configuration
# Velocity Badge Thresholds (% growth rates)
TRENDING_HOT_THRESHOLD=50              # Min % growth for Hot badge (default: 50)
TRENDING_RISING_THRESHOLD=15           # Min % growth for Rising badge (default: 15)
TRENDING_COOLING_THRESHOLD=-25         # Max % decline for Cooling badge (default: -25)

# Baseline Gates (minimum activity required)
TRENDING_BASELINE_VIEWS=50             # Min 7-day views for Rising/Hot badges (default: 50)
TRENDING_COOLING_BASELINE=100          # Min 7-day views for Cooling badge (default: 100)
TRENDING_BASELINE_SCORE=5              # Alt baseline: min yesterday score (default: 5)

# Velocity Calculation
TRENDING_BAYESIAN_PRIOR=5              # Prior to prevent division by zero/infinity (default: 5)

# New Badge
TRENDING_NEW_HOURS=48                  # Hours since first_seen for New badge (default: 48)

# Data Retention
TRENDING_HISTORY_DAYS=14               # Days to keep score history in Redis (default: 14)
TRENDING_SPARKLINE_DAYS=7              # Days to display in sparkline chart (default: 7)

# Analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

